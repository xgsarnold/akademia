      <h2><%= pluralize(@course_registration.errors.count, "error") %> prohibited this course_registration from being saved:</h2>

      <ul>
      <% @course_registration.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Student<br>
    <%= @course_registration.student.first_name + " " + @course_registration.student.last_name %>
  </div>
