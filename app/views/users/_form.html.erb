<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :person_id %>
    <%= f.grouped_collection_select :person_id, [Teacher, Student], :all, :model_name, :to_global_id, lambda {|person| person.first_name + " " + person.last_name},  prompt: "Select Person" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
