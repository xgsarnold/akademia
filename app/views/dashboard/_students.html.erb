<div class="field">
  Name: <%= @student.first_name + " " + @student.last_name%>
</div>
<div class="field">
  Birthdate: <%= @student.birthdate %>
</div>

<table>
  <tr>
    <th>Course Name:</th>
    <th>Course Roster:</th>
    <th>Course Grade:</th>
  </tr>

  <% @courses.each do |c| %>
    <tr>
      <td><%= c.course_name %></td>
      <td><%= @student.classmates(c.id).pluck(:first_name, :last_name) %></td>
      <td><%= @student.course_grade(c.id) %></td>
    </tr>
  <% end %>
</table>
